<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_game_details">


    <TextView
        android:id="@+id/game_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="Game id: 244"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/game_details_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_id">

        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="Reported On"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="Winner"
            android:textStyle="bold" />


        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="Player Count"
            android:textStyle="bold" />


        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2"
            android:text="Player Placement"
            android:textStyle="bold" />


        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="Reporter"
            android:textStyle="bold" />


        <TextView
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="Status"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/game_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_details_header">

        <TextView
            android:id="@+id/reported_on"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="2016-04-22 20:35:38" />

        <TextView
            android:id="@+id/winner"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="Gio" />


        <TextView
            android:id="@+id/player_count"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="2" />


        <TextView
            android:id="@+id/player_placement"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2"
            android:text="Gio, TomekK" />


        <TextView
            android:id="@+id/reporter"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="Gio" />


        <TextView
            android:id="@+id/status"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="Accepted" />

    </LinearLayout>


</LinearLayout>